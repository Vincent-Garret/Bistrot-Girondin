    {% block content %}
        <div class="resaForm xLarge-9">
                <div class="xLarge-6 imgForm">
                        <img src="{{ asset('img/form.jpg') }}" alt="" class="img-fluid">
                </div>
            {{ form_start(reservationForm, {'attr': {'class': 'frontForm xLarge-6'}}) }}
                <h1>Votre RÃ©servation</h1>
            {# form_label permet de rendre le label d'un champs de formulaire #}
                    {{ form_label(reservationForm.name) }}
                    {# form_widget permet de rendre l'input d'un formulaire #}
                    {{ form_widget(reservationForm.name) }}
