<h2>Vos Vins : </h2>
{% for message in app.flashes('success') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

{% for color in colors %}
    <h1>{{ color.name }}</h1>
    {% for region in regions %}
        {% if color.name == 'Rouge' %}
            {% if region.appellations | length > 0 %}
                <h2>{{ region.name }}</h2>
            {% endif %}
            {% for appellation in region.appellations %}
                {% set appelationListed = false %}
                {% for wine in appellation.wines %}
                        {% if wine.color.name == 'Rouge' %}
                            {% if appelationListed == false %}
                                <h3>{{ appellation.name }}</h3>
                            {% endif %}
                            <p>{{ wine.name }}</p>
                                <a href="{{ path('admin_update_wine', {'id':wine.id}) }}">Modifier le nom du vin</a>
                                <br>
                                <a href="{{ path('admin_delete_wine', {'id':wine.id}) }}">Supprimer ce vin</a>
                            {% set appelationListed = true %}
                        {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}
        {#Il faudra que je continu mon if avec des else if pour les blancs et les rosÃ©s#}
        {% if color.name == 'Blanc' %}
            {% if region.appellations | length > 0 %}
                <h2>{{ region.name }}</h2>
            {% endif %}
            {% for appellation in region.appellations %}
            {#{% set appelationListed = false %}#}
                {% for wine in appellation.wines %}
                    {% if wine.color.name == 'Blanc' %}

                            {#{% if appelationListed == false %}#}
                                <h3>{{ appellation.name }}</h3>
                            {#{% endif %}#}

                        <p>{{ wine.name }}</p>
                        {#<a href="{{ path('admin_update_wine', {'id':wine.id}) }}">Modifier le nom du vin</a>
                        <br>
                        <a href="{{ path('admin_delete_wine', {'id':wine.id}) }}">Supprimer ce vin</a>#}
                        {#{% set appelationListed = true %}#}
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endfor %}




