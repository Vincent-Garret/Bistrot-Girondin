{% extends 'Admin/base.html.twig' %}
    {% block content %}
        <h2>Vos Vins : </h2>
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}

        {% for color in colors %}
            <h1>{{ color.name }}</h1>
            {% for region in regions %}
                {% if color.name == 'Rouge' %}
                    {% if region.appellations | length > 0 %}
                        <h2>{{ region.name }}</h2>
                    {% endif %}
                    {% for appellation in region.appellations %}
                        {% for wine in appellation.wines %}
                                {% if wine.color.name == 'Rouge' %}
                                    <h3>{{ appellation.name }}</h3>
                                    <p>{{ wine.name }}
                                        <span class="modif">
                                            <a href="{{ path('admin_update_wine', {'id':wine.id}) }}">Modifier le nom du vin</a>
                                            <a href="{{ path('admin_delete_wine', {'id':wine.id}) }}">Supprimer ce vin</a>
                                        </span>
                                    </p>
                                {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                {% if color.name == 'Blanc' %}
                    {% if region.appellations | length > 0 %}
                        <h2>{{ region.name }}</h2>
                    {% endif %}
                    {% for appellation in region.appellations %}
                        {% for wine in appellation.wines %}
                            {% if wine.color.name == 'Blanc' %}
                                <h3>{{ appellation.name }}</h3>
                                    <p>{{ wine.name }}
                                        <span class="modif">
                                            <a href="{{ path('admin_update_wine', {'id':wine.id}) }}">Modifier le nom du vin</a>
                                            <a href="{{ path('admin_delete_wine', {'id':wine.id}) }}">Supprimer ce vin</a>
                                        </span>
                                    </p>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                {% if color.name == 'Rosé' %}
                    {% if region.appellations | length > 0 %}
                        <h2>{{ region.name }}</h2>
                    {% endif %}
                    {% for appellation in region.appellations %}
                        {% for wine in appellation.wines %}
                            {% if wine.color.name == 'Rosé' %}
                                <h3>{{ appellation.name }}</h3>
                                <p>{{ wine.name }}
                                    <span class="modif">
                                            <a href="{{ path('admin_update_wine', {'id':wine.id}) }}">Modifier le nom du vin</a>
                                            <a href="{{ path('admin_delete_wine', {'id':wine.id}) }}">Supprimer ce vin</a>
                                        </span>
                                </p>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        {% endfor %}
    {% endblock %}




