{% extends 'Admin/base.html.twig' %}
    {% block content %}
        <div class="divForm">
            {{ form_start(appellationForm, {'attr': {'class': 'form large-4 xLarge-4'}}) }}
                    {# form_label permet de rendre le label d'un champs de formulaire #}
                    {{ form_label(appellationForm.name) }}
                    {# form_widget permet de rendre l'input d'un formulaire #}
                    {{ form_widget(appellationForm.name) }}
                    {{ form_errors(appellationForm.name) }}

                    {{ form_label(appellationForm.region) }}
                    {# form_widget permet de rendre l'input d'un formulaire#}
                    {{ form_widget(appellationForm.region) }}
                    {{ form_errors(appellationForm.region) }}

                    {{ form_widget(appellationForm.submit) }}
            {{ form_end(appellationForm) }}
        </div>
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        <a href="{{ path('admin_appellation_list') }}">Retour Ã  la liste des appellations</a>
    {% endblock %}