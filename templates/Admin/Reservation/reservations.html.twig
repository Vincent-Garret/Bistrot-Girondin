{% extends 'Admin/base.html.twig' %}
    {% block content %}
        <h1>Vos Réservations :</h1>
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        <div class="reservations">
            {% for reservation in reservations %}
                <div class="reservation xLarge-3">
                    <p class="titreResa">
                        <svg id="icon-smiling-face" viewBox="0 0 32 32">
                        <path fill="#EDD786" d="M16.5 29v0c-6.904 0-12.5-5.596-12.5-12.5s5.596-12.5 12.5-12.5c6.904 0 12.5 5.596 12.5 12.5s-5.596 12.5-12.5 12.5zM16.5 28c6.351 0 11.5-5.149 11.5-11.5s-5.149-11.5-11.5-11.5c-6.351 0-11.5 5.149-11.5 11.5s5.149 11.5 11.5 11.5v0zM12 14c0.552 0 1-0.448 1-1s-0.448-1-1-1c-0.552 0-1 0.448-1 1s0.448 1 1 1v0zM21 14c0.552 0 1-0.448 1-1s-0.448-1-1-1c-0.552 0-1 0.448-1 1s0.448 1 1 1v0zM16.481 22c-3.481 0-5.481-2-5.481-2v1c0 0 2 2 5.481 2s5.519-2 5.519-2v-1c0 0-2.037 2-5.519 2v0z"></path>
                        </svg>
                        {{ reservation.name }} {{ reservation.lastName }}
                    </p>
                    <div class="info">
                        <p>Nombre de personnes : {{ reservation.number }}</p>
                        <p>Date et heure : {{ reservation.time | date('d/m/Y \\à H:i')}}</p>
                        <p>Mail : {{ reservation.mail }}</p>
                        <p>Téléphone : 0{{ reservation.telephone }}</p>
                        {% if reservation.commentary %}
                            <p>Commentaire : {{ reservation.commentary }}</p>
                        {% endif %}
                        <a href=" {{ path('admin_reservation_delete', {'id': reservation.id }) }}">Supprimer cette réservation</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endblock %}